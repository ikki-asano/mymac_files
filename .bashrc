# 日本語対応
export LANG='ja_JP.UTF-8'

# エイリアス
alias emacs="/Applications/Emacs.app/Contents/MacOS/Emacs &"
alias slack="/Applications/Slack.app/Contents/MacOS/Slack &"

# llを使いたい
alias ll="ls -la"
# lsの結果を色付きで表示してくれる
# alias ls="ls --color=auto"
alias ls="ls -G"
# laで隠しファイルも含めて全部表示してくれる
alias la="ls -a"


# ○○するときに、本当に○○していいか聞いてくれる系のエイリアス
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# .. だけで親ディレクトリにいける
alias ..='cd ..'


